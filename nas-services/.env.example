# BluRay Converter - NAS Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Mac mini connection details
MAC_MINI_IP=192.168.1.100
MAC_MINI_PORT=8000

# NAS network settings
NAS_IP=192.168.1.50
NAS_PORT=8080
WEB_UI_PORT=8081

# =============================================================================
# DIRECTORY PATHS
# =============================================================================

# Base path for all movie directories (adjust for your NAS)
MOVIES_BASE_PATH=/volume1/video/Кино

# Subdirectory names (can be customized)
BLURAY_RAW_FOLDER=BluRayRAW
BLURAY_PROCESSED_FOLDER=BluRayProcessed
BLURAY_TEMP_FOLDER=BluRayTemp

# =============================================================================
# TELEGRAM CONFIGURATION
# =============================================================================

# Telegram bot token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram chat ID (get from @userinfobot)
TELEGRAM_CHAT_ID=your_chat_id_here

# =============================================================================
# SCHEDULING
# =============================================================================

# Cron schedule for automatic scanning (default: 3 AM daily)
SCAN_SCHEDULE=0 3 * * *

# =============================================================================
# SMB/CIFS CONFIGURATION
# =============================================================================

# SMB credentials for Mac mini to access NAS
SMB_USERNAME=nas_user
SMB_SHARE_NAME=video

# =============================================================================
# LOGGING AND DEBUGGING
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable mock mode for testing without real file operations
MOCK_MODE=false

# Enable dry run mode (log actions without executing)
DRY_RUN=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database cleanup settings
DB_CLEANUP_DAYS=60

# =============================================================================
# SYSTEM LIMITS
# =============================================================================

# Maximum number of retry attempts for failed tasks
MAX_RETRY_ATTEMPTS=3

# Timeout for Mac mini API calls (seconds)
MAC_API_TIMEOUT=300

# Maximum concurrent processing tasks
MAX_CONCURRENT_TASKS=1