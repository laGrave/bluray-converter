# BluRay Converter - Mac Services Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# NAS connection details
NAS_IP=192.168.1.50
NAS_API_PORT=8080

# Worker service port
WORKER_PORT=8000

# =============================================================================
# SMB/CIFS MOUNTING
# =============================================================================

# NAS SMB credentials
SMB_USERNAME=nas_user
SMB_PASSWORD=secure_password_here
SMB_SHARE_NAME=video

# Mount point for NAS share
MOUNT_POINT=/mnt/nas

# =============================================================================
# FFMPEG CONFIGURATION
# =============================================================================

# Number of threads for FFmpeg (0 = auto-detect)
FFMPEG_THREADS=0

# FFmpeg preset (ultrafast, superfast, veryfast, faster, fast, medium, slow, slower, veryslow)
FFMPEG_PRESET=slow

# Additional FFmpeg parameters (optional)
FFMPEG_EXTRA_PARAMS=

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================

# Maximum processing time per movie (minutes)
MAX_PROCESSING_TIME=480

# Temporary directory for processing
TEMP_DIR=/tmp/bluray_processing

# =============================================================================
# LOGGING AND DEBUGGING
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable mock mode for testing (simulates FFmpeg with sleep)
MOCK_MODE=false

# Enable dry run mode (log actions without executing)
DRY_RUN=false

# Verbose logging for debugging
VERBOSE_LOGGING=false

# =============================================================================
# SYSTEM RESOURCES
# =============================================================================

# Memory limit for FFmpeg processes (GB)
MEMORY_LIMIT=6

# Disk space check threshold (GB free required)
DISK_SPACE_THRESHOLD=50

# =============================================================================
# ERROR HANDLING
# =============================================================================

# Maximum retry attempts for failed operations
MAX_RETRY_ATTEMPTS=2

# Delay between retry attempts (seconds)
RETRY_DELAY=30

# Timeout for NAS API calls (seconds)
NAS_API_TIMEOUT=60

# =============================================================================
# HEALTH MONITORING
# =============================================================================

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=30

# Health check timeout (seconds)
HEALTH_CHECK_TIMEOUT=10